{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Mods4Versus",
    "version": "1.2.1",
    "identifier": "com.kublay.mods4versus",
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "frontendDist": "../frontend"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Mods4Versus",
                "width": 1100,
                "height": 750,
                "resizable": true,
                "center": true,
                "decorations": false
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; img-src * asset: https://asset.localhost http://asset.localhost data: blob:; style-src 'self' 'unsafe-inline'; media-src 'self'",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$RESOURCE/**",
                    "C:\\**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "publisher": "Kublay Tayro",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/256x256.png",
            "icons/512x512.png",
            "icons/icon.ico",
            "icons/icon.png"
        ],
        "targets": "nsis",
        "windows": {
            "nsis": {
                "template": "installer.nsi",
                "installMode": "perMachine",
                "sidebarImage": "icons/installer-sidebar.bmp",
                "headerImage": "icons/installer-header.bmp"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM2QjRDM0FGNTM2QjdGQzEKUldUQmYydFRyOE8weGt2bE05YUZDVzg4R2k0eERFRDFXb1FuZlNzb2lTZFZuc0VhVXJXeDhCMFoK",
            "endpoints": [
                "https://raw.githubusercontent.com/kublay-tayro/Mods4Versus/main/updater.json"
            ]
        }
    }
}