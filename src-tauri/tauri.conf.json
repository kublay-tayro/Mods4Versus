{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Mods4Versus",
    "version": "0.1.0",
    "identifier": "com.kublay.mods4versus",
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "frontendDist": "../frontend"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Mods4Versus",
                "width": 1100,
                "height": 750,
                "resizable": true,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; img-src * asset: https://asset.localhost http://asset.localhost data: blob:; style-src 'self' 'unsafe-inline'; media-src 'self'",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$RESOURCE/**",
                    "C:\\**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/256x256.png",
            "icons/512x512.png",
            "icons/icon.ico",
            "icons/icon.png"
        ],
        "targets": "all"
    }
}